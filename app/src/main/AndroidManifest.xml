<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lania.biblioapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiblioApp">
        <activity android:name=".componentes.miembro.MiembroActivity" />
        <activity android:name=".componentes.libros.LibroActivity" />
        <activity android:name=".componentes.editor.EditorActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provedor.LibroContentProvider"
            android:authorities="com.lania.biblioapp.provedor.LibroContentProvider"
            android:exported="true"
            android:multiprocess="true" />
    </application>

</manifest>